{
  "name": "pwa-helpers",
  "version": "0.6.1",
  "description": "git packages test",
  "module": "src/index.js",
  "scripts": {
    "start": "vite preview --port 8080",
    "build": "tsc && vite build",
    "watch": "vite --host",
    "lint": "eslint src --ext .ts",
    "lint:fix": "prettier --write src && eslint --fix src --ext .ts",
    "release": "release-it",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Donskelle/pwa-helpers.git"
  },
  "author": "Fabian Puszies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Donskelle/pwa-helpers/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/Donskelle/pwa-helpers#readme",
  "devDependencies": {
    "@release-it/conventional-changelog": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "auto-changelog": "^2.0.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.6",
    "prettier": "^2.0.4",
    "release-it": "^13.5.4",
    "typescript": "^4.7.3",
    "vite": "^2.9.9"
  },
  "release-it": {
    "hooks": {
      "before:release": "npx auto-changelog -p && git add CHANGELOG.md"
    },
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  }
}